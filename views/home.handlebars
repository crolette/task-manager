<h1>Task Manager</h1>
{{#if user}}
	<form action='/' method='post'>
		<label for='description'>Name of the new task:</label>
		<input type='text' id='description' name='description' required />
		<button type='submit'>Submit</button>
	</form>
{{/if}}

<div class='container'>
	<div id='tasks_to_do'>
		<h2>Tasks To Do</h2>
		<ul>
			{{#each tasksToDo}}
				<li>{{this.id}} : {{this.description}}</li>
			{{/each}}
		</ul>
	</div>
	<div id='tasks_done'>
		<h2>Done Tasks</h2>
		<ul>
			{{#each tasksDone}}
				<li>{{this.id}} : {{this.description}}</li>
			{{/each}}
		</ul>
	</div>
</div>