<h1>Which task do you want to mark as done ?</h1>
<form action='/done' method='post'>
	<label for='id'>Number of the task:</label>
	<input type='number' id='id' name='id' required />
	<button type='submit'>Submit</button>
</form>
<div class='container'>
	<div id='tasks_to_do'>
		<h2>Tasks To Do</h2>
		<ul>
			{{#each tasksToDo}}
				<li>{{this.id}} : {{this.description}}</li>
			{{/each}}
		</ul>>
	</div>
</div>